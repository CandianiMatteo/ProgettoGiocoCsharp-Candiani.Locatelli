<UserControl x:Class="ProgettoVisualstudio.Livello3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgettoVisualstudio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Height="213">

            <Button x:Name="BOTTONE1" Content="A"
                Width="100"
                Height="100"
                Margin="15"
                FontSize="18"
                Foreground="White" Click="BOTTONE1_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50"
                            Background="Red"
                            BorderBrush="#880000"
                            BorderThickness="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="BOTTONE2" Content="C"
                Width="100"
                Height="100"
                Margin="15"
                FontSize="18"
                Foreground="White" Click="BOTTONE2_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50"
                            Background="Green"
                            BorderBrush="#004400"
                            BorderThickness="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="BOTTONE3" Content="B"
                Width="100"
                Height="100"
                Margin="15"
                FontSize="18"
                Foreground="White" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50"
                            Background="Blue"
                            BorderBrush="#000066"
                            BorderThickness="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
        <Label x:Name="labelsequenza" Content="ROSSO  BLU  VERDE" HorizontalAlignment="Left" Margin="29,41,0,0" VerticalAlignment="Top" Width="172" FontSize="18" Background="Red" Foreground="White"/>
        <Label Content="CLICCANE 3 A CASO ;)" HorizontalAlignment="Left" Height="40" Margin="29,35,0,0" VerticalAlignment="Top" Width="291" FontSize="16"/>
    </Grid>
</UserControl>