<UserControl x:Class="ProgettoVisualstudio.Livello5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgettoVisualstudio"
             mc:Ignorable="d" Height="123" Width="222">

    <Grid Margin="0,0,10,3">

        <Grid Margin="0,-11,-7,26">

            <!-- BOTTONE SINISTRA -->
            <Button x:Name="bottone1"
                    Width="51"
                    Height="51"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FocusVisualStyle="{x:Null}"
                    Click="bottone_Click"
                    Margin="0,41,0,0">

                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>

                            <Ellipse Margin="4" Fill="#3A3A3A">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black"
                                                      Direction="270"
                                                      ShadowDepth="5"
                                                      BlurRadius="10"
                                                      Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <Ellipse x:Name="buttonEllipse"
                                     Stroke="Black"
                                     StrokeThickness="2">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                        <GradientStop Color="#FFFF6666" Offset="0"/>
                                        <GradientStop Color="#FF990000" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="White"
                                              TextBlock.FontWeight="Bold"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonEllipse" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="3"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="buttonEllipse" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>

            </Button>

            <!-- BOTTONE DESTRA -->
            <Button x:Name="bottone2"
                    Width="54"
                    Height="51"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FocusVisualStyle="{x:Null}"
                    Click="bottone_Click"
                    Margin="92,44,0,0">

                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>

                            <Ellipse Margin="4" Fill="#3A3A3A">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black"
                                                      Direction="270"
                                                      ShadowDepth="5"
                                                      BlurRadius="10"
                                                      Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <Ellipse x:Name="buttonEllipse"
                                     Stroke="Black"
                                     StrokeThickness="2">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                        <GradientStop Color="#FFFF6666" Offset="0"/>
                                        <GradientStop Color="#FF990000" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="White"
                                              TextBlock.FontWeight="Bold"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonEllipse" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="3"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="buttonEllipse" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>

            </Button>
            <Label Content="CLICCALI VELOCE&#xD;&#xA;" HorizontalAlignment="Left" Height="39" Margin="0,10,0,0" VerticalAlignment="Top" Width="183" FontSize="20"/>

        </Grid>

    </Grid>
</UserControl>