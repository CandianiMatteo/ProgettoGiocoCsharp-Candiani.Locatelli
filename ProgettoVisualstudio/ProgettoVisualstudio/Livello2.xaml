<UserControl x:Class="ProgettoVisualstudio.Livello2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- Aggiungo un background così il Designer non sembra vuoto -->
    <Grid>

        <Button x:Name="button_livello2"
                Content=""
                Width="120"
                Height="120"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FocusVisualStyle="{x:Null}">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>

                        <!-- Ombra -->
                        <Ellipse Margin="4">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#3A3A3A"/>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black"
                                                  Direction="270"
                                                  ShadowDepth="5"
                                                  BlurRadius="10"
                                                  Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- Bottone vero -->
                        <Ellipse x:Name="buttonEllipse"
                                 Stroke="Black"
                                 StrokeThickness="2">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.3,0.3">
                                    <GradientStop Color="#FFFF6666" Offset="0"/>
                                    <GradientStop Color="#FF990000" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Testo -->
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="White"
                                          TextBlock.FontWeight="Bold"/>
                    </Grid>

                    <!-- ANIMAZIONE -->
                    <ControlTemplate.Triggers>

                        <!-- Effetto pressione -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonEllipse" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="3"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="buttonEllipse" Property="Opacity" Value="0.9"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>
</UserControl>

