    <Grid Margin="0,0,-152,-26">
        <Button x:Name="bottone1"
            Content=""
            Width="52"
            Height="52"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FocusVisualStyle="{x:Null}" Click="Cella_Click" Margin="35,23,0,0">

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>

                        <!-- Ombra -->
                        <Ellipse Margin="4" Fill="#3A3A3A">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black"
                                    Direction="270"
                                    ShadowDepth="5"
                                    BlurRadius="10"
                                    Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- Bottone vero -->
                        <Ellipse x:Name="buttonEllipse"
                            Stroke="Black"
                            StrokeThickness="2">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.3,0.3">
                                    <GradientStop Color="#FFFF6666" Offset="0"/>
                                    <GradientStop Color="#FF990000" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Testo -->
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextBlock.Foreground="White"
                            TextBlock.FontWeight="Bold"/>
                    </Grid>

                    <!-- ANIMAZIONE -->
                    <ControlTemplate.Triggers>

                        <!-- Effetto pressione -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonEllipse" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="3"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="buttonEllipse" Property="Opacity" Value="0.9"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Button.Template>

        </Button>
