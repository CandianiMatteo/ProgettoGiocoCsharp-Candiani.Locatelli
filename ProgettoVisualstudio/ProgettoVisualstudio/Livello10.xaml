<UserControl x:Class="ProgettoVisualstudio.Livello10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#222">
        <Label x:Name="LabelTitolo" Content="ACCHIAPPA IL BOTTONE! (0/10)" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,20,0,0" Foreground="White" FontSize="20" FontWeight="Bold"/>

        <ProgressBar x:Name="BarraProgresso" 
                     HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Height="25" Width="400" Margin="0,70,0,0" 
                     Minimum="0" Maximum="10" Foreground="Lime" ValueChanged="BarraProgresso_ValueChanged"/>

        <Canvas x:Name="AreaGioco" Margin="20,120,20,20" Background="#333">
            <Button x:Name="BtnBersaglio" 
                    Content="CLICCAMI!" 
                    Width="100" Height="45" 
                    Background="Orange" FontWeight="Bold" 
                    Click="BtnBersaglio_Click"/>
        </Canvas>

        <Button x:Name="BTNFINE" Content="FINE GIOCO" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="80" Width="250" 
                Background="Lime" FontSize="24" FontWeight="Bold" 
                Visibility="Hidden" Click="BTNFINE_Click"/>
    </Grid>
</UserControl>