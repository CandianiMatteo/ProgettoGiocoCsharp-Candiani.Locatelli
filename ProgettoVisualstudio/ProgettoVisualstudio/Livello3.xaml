<UserControl x:Class="ProgettoVisualstudio.Livello3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgettoVisualstudio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- TEMPLATE RIUTILIZZABILE -->
    <UserControl.Resources>

        <ControlTemplate x:Key="RoundButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    CornerRadius="50"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    RenderTransformOrigin="0.5,0.5">

                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>

                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="15"
                                      ShadowDepth="5"
                                      Opacity="0.6"/>
                </Border.Effect>

                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
            </Border>

            <!-- ANIMAZIONE CLICK -->
            <ControlTemplate.Triggers>

                <Trigger Property="IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="border"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="0.85" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetName="border"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="0.85" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>

                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="border"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetName="border"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0">

            <!-- BOTTONE 1 -->
            <Button x:Name="BOTTONE1"
                    Content="A"
                    Width="100"
                    Height="100"
                    Margin="15"
                    FontSize="18"
                    Foreground="White"
                    Background="Red"
                    BorderBrush="#880000"
                    BorderThickness="4"
                    Template="{StaticResource RoundButtonTemplate}"
                    Click="BOTTONE1_Click"/>

            <!-- BOTTONE 2 -->
            <Button x:Name="BOTTONE2"
                    Content="C"
                    Width="100"
                    Height="100"
                    Margin="15"
                    FontSize="18"
                    Foreground="White"
                    Background="Green"
                    BorderBrush="#004400"
                    BorderThickness="4"
                    Template="{StaticResource RoundButtonTemplate}"
                    Click="BOTTONE2_Click"/>

            <!-- BOTTONE 3 -->
            <Button x:Name="BOTTONE3"
                    Content="B"
                    Width="100"
                    Height="100"
                    Margin="15"
                    FontSize="18"
                    Foreground="White"
                    Background="Blue"
                    BorderBrush="#000066"
                    BorderThickness="4"
                    Template="{StaticResource RoundButtonTemplate}"
                    Click="Button_Click"/>

        </StackPanel>
        <Label x:Name="labelsequenza" Content="ROSSO  BLU  VERDE" HorizontalAlignment="Left" Margin="29,41,0,0" VerticalAlignment="Top" Width="172" FontSize="18" Background="Red" Foreground="White"/>
        <Label Content="CLICCANE 3 A CASO ;)" HorizontalAlignment="Left" Height="40" Margin="29,35,0,0" VerticalAlignment="Top" Width="291" FontSize="16"/>
    </Grid>
</UserControl>