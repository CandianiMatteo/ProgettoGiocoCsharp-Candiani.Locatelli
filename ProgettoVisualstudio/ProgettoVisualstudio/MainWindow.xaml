<Window x:Class="ProgettoVisualstudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgettoVisualstudio"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid Background="#788273">
        <Button x:Name="button_start"
        Content=""
        Width="120"
        Height="120"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        FocusVisualStyle="{x:Null}" Margin="0,617,0,0" Click="button_start_Click_1">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>

                        <!-- Ombra -->
                        <Ellipse Margin="4">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#3A3A3A"/>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black"
                                          Direction="270"
                                          ShadowDepth="5"
                                          BlurRadius="10"
                                          Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- Bottone vero -->
                        <Ellipse x:Name="buttonEllipse" Stroke="Black" StrokeThickness="2">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.3,0.3">
                                    <GradientStop Color="#FFFF6666" Offset="0"/>
                                    <GradientStop Color="#FF990000" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextBlock.Foreground="White"
                                  TextBlock.FontWeight="Bold"/>
                    </Grid>

                    <!-- ANIMAZIONE -->
                    <ControlTemplate.Triggers>

                        <!-- Effetto pressione -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonEllipse" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="3"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="buttonEllipse" Property="Opacity" Value="0.9"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Button.Template>

        </Button>
        <ListBox HorizontalAlignment="Left" Height="0" Margin="566,415,0,0" VerticalAlignment="Top" Width="34" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Grid Margin="27,51,746,455" x:Name="livello2">
            <local:Livello2 HorizontalAlignment="Left" Margin="27,0,0,0" VerticalAlignment="Center" Loaded="Livello2_Loaded" Height="219"/>
        </Grid>
        <Button x:Name="buttone_registrazione" Content="Registrazione"
        HorizontalAlignment="Left"
        Margin="1014,657,0,0"
        VerticalAlignment="Top"
        Height="80"
        Width="146"
        Click="ApriRegistrazione_Click"/>
        <Grid x:Name="livello3" Margin="750,10,40,519" >
            <local:Livello3  HorizontalAlignment="Left" Height="220" Margin="0,25,0,0" VerticalAlignment="Top" Width="400"  Loaded="Livello3_Loaded"/>
        </Grid>
        <local:Livello2 HorizontalAlignment="Left" Margin="1533,306,0,0" VerticalAlignment="Top"/>

        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="1799,265,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="Livello4" HorizontalAlignment="Left" Height="319" Margin="726,306,0,0" VerticalAlignment="Top" Width="458">
            <local:Livello4 HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="gridlivello5" HorizontalAlignment="Left" Height="159" Margin="27,578,0,0" VerticalAlignment="Top" Width="297"/>




    </Grid>
</Window>
